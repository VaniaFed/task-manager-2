{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2015",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": false,
		"paths": {
			"scss/*": ["./scr/scss/*"],
			"blocks/*": ["./src/blocks/*"],
			"services/*": ["./src/services/*"],
			"utils/*": ["./src/utils/*"],
			"helpers/*": ["./src/helpers/*"],
			"types/*": ["./src/types/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["node_modules", "**/node_modules/*", ".stylelintrc.ts"]
}
